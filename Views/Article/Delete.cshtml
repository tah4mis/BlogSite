@model BlogSite.Models.Article

@{
    ViewData["Title"] = "Makale Sil";
}

<div class="container mt-4">
    <h1>Makale Sil</h1>
    
    <div class="alert alert-danger mt-4">
        <h4>Bu makaleyi silmek istediğinizden emin misiniz?</h4>
        <p>Bu işlem geri alınamaz!</p>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <div class="text-muted mb-3">
                <span class="me-3">Yazar: @Model.Author.UserName</span>
                <span class="me-3">Kategori: @Model.Category.Name</span>
                <span>Tarih: @Model.PublishedAt.ToString("dd.MM.yyyy")</span>
            </div>
            <p class="card-text">@(Model.Content.Length > 300 ? Model.Content.Substring(0, 300) + "..." : Model.Content)</p>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
        </form>
    </div>
</div> 