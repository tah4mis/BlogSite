@model IEnumerable<BlogSite.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-md-4 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Kategori
                </a>
            }
        </div>
    </div>

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">
                            <small class="text-muted">
                                Bu kategoride @category.Articles.Count makale bulunuyor
                            </small>
                        </p>
                        <a asp-controller="Article" asp-action="Index" asp-route-category="@category.Name" 
                           class="btn btn-primary">Makaleleri GÃ¶r</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 